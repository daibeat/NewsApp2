<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_item_per_page_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_item_per_page_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_item_per_page_label" />

    <ListPreference
        android:defaultValue="@string/settings_order_by_default"
        android:entries="@array/settings_order_by_news_items"
        android:entryValues="@array/settings_order_by_date"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />
</PreferenceScreen>